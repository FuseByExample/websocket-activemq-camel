<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.fusesource.examples.activemq.websocket</groupId>
  <artifactId>project</artifactId>
  <packaging>pom</packaging>
  <version>1.0</version>
  <name>FuseSource :: WebSocket :: ActiveMQ &amp; Camel Project</name>

  <properties>
    <!-- Camel 2.11
    <camel-version>2.11.0</camel-version>
    <activemq-version>5.8.0</activemq-version>
    <slf4j-version>1.6.6</slf4j-version>
    <log4j-version>1.2.17</log4j-version>

    <jetty-maven-plugin.version>7.6.8.v20121106</jetty-maven-plugin.version>
    -->
    <camel-version>2.10.0</camel-version>
    <activemq-version>5.8.0</activemq-version>
    <slf4j-version>1.6.5</slf4j-version>
    <log4j-version>1.2.16</log4j-version>

    <jetty-maven-plugin.version>7.6.8.v20121106</jetty-maven-plugin.version>
  </properties>

  <modules>
    <module>feeder</module>
    <module>web</module>
    <module>camel-ws</module>
    <module>camel-ws-ssl</module>
  </modules>

  <dependencies>
    <dependency>
      <groupId>org.apache.activemq</groupId>
      <artifactId>activemq-all</artifactId>
      <version>${activemq-version}</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4j-version}</version>
    </dependency>
  </dependencies>

  <repositories>
    <repository>
      <id>central</id>
      <url>http://repo1.maven.org/maven2/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>fuse-releases</id>
      <url>http://repo.fusesource.com/nexus/content/repositories/releases/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>central</id>
      <url>http://repo1.maven.org/maven2/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
    <pluginRepository>
      <id>fuse-releases</id>
      <url>http://repo.fusesource.com/nexus/content/repositories/releases/</url>
    </pluginRepository>
    <pluginRepository>
      <id>fuse-public</id>
      <url>http://repo.fusesource.com/nexus/content/groups/public/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>
</project>
